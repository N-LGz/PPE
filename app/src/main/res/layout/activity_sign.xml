<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignActivity"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark" android:id="@+id/main_layout">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" android:id="@+id/title_field">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Sign In"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/infos_field">
        <LinearLayout
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" android:id="@+id/personal">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:id="@+id/labels">
                <TextView
                        android:text="Name"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/name_sign"
                        android:layout_weight="1"
                        android:textAlignment="center"/>
                <TextView
                        android:text="Last Name"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lastname_sign"
                        android:layout_weight="1"
                        android:textAlignment="center"/>
                <TextView
                        android:text="Age"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/age_sign"
                        android:layout_weight="1"
                        android:textAlignment="center"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" android:id="@+id/form">
                <EditText
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/name_entry" android:layout_weight="1" android:textAlignment="center"/>
                <EditText
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/lastname_entry" android:layout_weight="1" android:textAlignment="center"/>
                <EditText
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberSigned"
                        android:ems="10"
                        android:id="@+id/age_entry" android:layout_weight="1" android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/register">
            <EditText
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borders"
                    android:layout_marginTop="20dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/mail_sign"
                    android:hint="E-mail"
                    android:textAlignment="center"/>
            <EditText
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borders"
                    android:layout_marginTop="20dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password_sign"
                    android:hint="Password"
                    android:textAlignment="center"/>
            <Button
                    android:text="GO"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/signup_button" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>